{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier" // eslint-config-prettier：使用prettier的规则覆盖一部分eslint的规则，以使用Prettier来规范代码风格
  ],
  "overrides": [],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {},
  "ignorePatterns": ["*.eslintrc.js", "gulpfile.js", "commitlint.config.js", "webpack.config.js"]
}
