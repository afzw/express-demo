{
  "ts-node": {
    "transpileOnly": true, //  ts-node不进行类型检查，加快速度
    "files": true //  使 ts-node 识别 tsconfig.json 的 files, include or exclude 配置
  },
  "compilerOptions": {
    "outDir": "tsc-dist",
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": ["src/**/*.ts", "config/**/*.ts", "scripts/**/*.ts"],
  "exclude": ["**/node_modules/*"]
}
